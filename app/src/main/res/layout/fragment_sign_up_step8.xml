<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/lightestBlue2"
    tools:context=".ui.SignUp.SignUpStep6Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginTop="50dp"
            android:max="100"
            android:progress="72"
            android:progressDrawable="@drawable/sign_up_progress_bar" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-black"
            android:text="선호하는 장르를 알려주세요"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="당신과 함께할 밴드를 찾아드릴게요" />

        <Button
            android:id="@+id/btnGenre1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_button_black_stroke"
            android:backgroundTint="@color/lightestBlue2"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="해외 락"
            android:textColor="@color/darkestBlue" />

        <Button
            android:id="@+id/btnGenre2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_button_black_stroke"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="메탈" />

        <Button
            android:id="@+id/btnGenre3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_button_black_stroke"
            android:backgroundTint="@color/lightestBlue2"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="재즈"
            android:textColor="@color/darkestBlue" />

        <Button
            android:id="@+id/btnGenre4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_button_black_stroke"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="국내 인디" />

        <Button
            android:id="@+id/btnGenre5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_button_black_stroke"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="CCM" />

        <Button
            android:id="@+id/btnGenre6"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_button_black_stroke"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="J-POP" />

        <Button
            android:id="@+id/btnGenre7"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_button_black_stroke"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="팝" />

        <Button
            android:id="@+id/btnGenre8"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_button_black_stroke"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="기타 장르" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_button_darkest_blue"
            android:fontFamily="sans-serif-black"
            android:text="다음"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>