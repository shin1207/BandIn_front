<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnPrevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/textBandName"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:drawableTint="@color/darkestBlue"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="밴드 정보수정"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="511dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="밴드 이름"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtInfo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/radius_button_blue_stroke"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColorHint="@color/lightestDark"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="밴드 한 줄 소개글"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtInfo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/radius_button_blue_stroke"
                    android:gravity="left"
                    android:hint="밴드를 나타내는 소개글을 적어주세요"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:textColorHint="@color/lightestDark"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="활동 지역"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnState"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:backgroundTint="#E3F1FD"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="서울"
                        android:textColor="@color/darkestBlue" />

                    <Button
                        android:id="@+id/btnState8"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="경기" />

                    <Button
                        android:id="@+id/btnState9"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="충청도" />

                    <Button
                        android:id="@+id/btnState10"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="강원도" />

                    <Button
                        android:id="@+id/btnState11"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="경상도" />

                    <Button
                        android:id="@+id/btnState12"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="전라도" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="세부 지역"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/edtStateDetail2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:hint="예) 홍대, 사당, 망원"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textColorHint="@color/lightestDark"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-black"
                        android:text="활동 장르"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnGenre"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:backgroundTint="@color/lightestBlue2"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="해외 락"
                        android:textColor="@color/darkestBlue" />

                    <Button
                        android:id="@+id/btnGenre9"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="메탈" />

                    <Button
                        android:id="@+id/btnGenre10"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:backgroundTint="@color/lightestBlue2"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="재즈"
                        android:textColor="@color/darkestBlue" />

                    <Button
                        android:id="@+id/btnGenre11"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="국내 인디" />

                    <Button
                        android:id="@+id/btnGenre12"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="CCM" />

                    <Button
                        android:id="@+id/btnGenre13"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="J-POP" />

                    <Button
                        android:id="@+id/btnGenre14"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="팝" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-black"
                        android:text="밴드 성향"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnStyle"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:backgroundTint="#E3F1FD"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="취미"
                        android:textColor="@color/darkestBlue" />

                    <Button
                        android:id="@+id/btnStyle4"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="세미 프로" />

                    <Button
                        android:id="@+id/btnStyle5"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radius_button_black_stroke"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="프로 지향" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnDone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_button_darkest_blue"
            android:fontFamily="sans-serif-black"
            android:text="완료"
            android:textColor="@color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>